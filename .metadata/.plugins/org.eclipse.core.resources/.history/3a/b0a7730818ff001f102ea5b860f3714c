package basicNumbers;

public class Pascals_Triangle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n = 6;
		int k =1;
		for (int i = 1; i <=n; i++) {
			for (int j = 1; j <=n; j++) {
				System.out.print(" ");
			}
			for (int j = 1; j <= i; j++) {
				if(i == j|| j== i) {
					k =1;
					System.out.print(k+" ");
				}else {
					
					System.out.print(k+" ");
					k++;
			}}
			System.out.println();	
		}

	}

}
