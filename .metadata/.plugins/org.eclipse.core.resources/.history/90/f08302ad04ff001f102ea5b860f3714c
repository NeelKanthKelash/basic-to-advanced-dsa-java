package basicNumbers;

public class Floyds_triangle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int n = 5;
	    int k =1;
	    
		for (int i = 1; i <=n; i++) {
			
			for (int j = 1; j <=i; j++) {
				System.out.print(k+" ");
				k++;
			}		
			int spaces = 2/(n*n-i);
			for (int j = 1; j <= spaces; j++) {
				System.out.print(" ");
			}
			for (int j = 1; j <= i ; j++) {
				System.out.print(k);
				k++;
			}
			System.out.println();	
		}
		
	}
}
